#include <stdio.h>
int per(int num){
   int counter = 1,  timeless ;
    long int number, decimal = 0;
    number = num;
    while (number!=0){    
        timeless = number % 10*counter;
        decimal = decimal + timeless;
        number = number/10;
        counter*=2;
    }
   printf("%d --> %d.\n", num,decimal);
}
int main(void){
  int a;
  printf("Кол-во чисел: ");scanf("%d", &a);
  int arr[a],num;
  for(int i = 0;i<a;i++){
    printf("Введите число №%d ", i+1);scanf("%d", &num);
    arr[i] = num;
  }
  printf("\nРезультат\n");
  for(int j = 0; j<a;j++){
    per(arr[j]);
  }
}
